<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team 1 Stats</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1, h2 {
            text-align: center;
            color: #ff4d6d;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 8px; /* Adjusted padding for better spacing */
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #ff4d6d;
            color: #fff;
        }

        tbody tr:nth-child(even) {
            background-color: #ffe5ea; /* Lighter background for even rows */
        }

        tbody tr:hover {
            border: 1px solid #ff8091; /* Darker border on hover */
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            margin-bottom: 20px;
            background-color: #ff4d6d;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .back-button:hover {
            background-color: #d93b53;
        }

        .scoreboard {
            margin-bottom: 20px;
            text-align: center;
        }

        .scoreboard div {
            font-size: 1em;
            color: #ff4d6d;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }
        .next-button {
            display: inline-block;
            padding: 10px 20px;
            margin-bottom: 20px;
            background-color: #ff4d6d;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                padding: 10px 560px;
                font-size: 0.8em;
            }

        @media (max-width: 768px) { /* Target medium screens (adjust as needed) */
            body {
                padding: 15px;
            }

            th, td {
                padding: 6px;
                font-size: 0.9em;
            }

            .back-button {
                padding: 6px 12px;
                font-size: 0.8em;
            }
          
        }

        @media (max-width: 500px) { /* Target small screens */
            body {
                padding: 10px;
            }

            h1, h2 {
                font-size: 1.2em;
            }

            th, td {
                padding: 4px;
                font-size: 0.8em;
            }

            .back-button {
                padding: 5px 10px;
                font-size: 0.7em;
            }

            .scoreboard div {
                font-size: 0.9em;
            }
        }
    </style>
</head>
<body>
    <a href="/match/<%= match._id %>" class="back-button">Back</a>
    <h1>Team <%= match.team1_name %> Stats</h1>

    <div class="scoreboard">
        <div><strong>Score:</strong> <%= match.team1_runs %>/<%= match.team1_wickets %></div>
        <div><strong>Overs:</strong> <%= match.team1_overs %></div>
    </div>

    <h2>Batting Stats</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Runs</th>
                <th>Balls</th>
                <th>Fours</th>
                <th>Sixes</th>
                <th>Strike Rate</th>
            </tr>
        </thead>
        <tbody>
            <% match.team1_player_batting_stats.forEach(function(player) { %>
                <tr>
                    <td>
                        <%= player.name %>
                        <div style="font-size: 0.8em; color: #555;">
                            <%= player.out_type %>
                            <% if (player.out_type === 'run out') { %>
                                (<%= player.assist %>)
                            <% } else if (player.out_type === 'bowled') { %>
                                (<%= player.bowler_name %>)
                            <% } else if (player.out_type === 'caught') { %>
                                (<%= player.bowler_name %> / <%= player.assist %>)
                            <% } %>
                        </div>
                    </td>
                    <td><%= player.runs %></td>
                    <td><%= player.balls %></td>
                    <td><%= player.fours %></td>
                    <td><%= player.sixes %></td>
                    <td><%= player.strike_rate %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Bowling Stats</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Runs</th>
                <th>Balls</th>
                <th>Overs</th>
                <th>Wickets</th>
                <th>Economy</th>
            </tr>
        </thead>
        <tbody>
            <% match.team2_player_bowling_stats.forEach(function(player) { %>
                <tr>
                    <td><%= player.name %></td>
                    <td><%= player.runs %></td>
                    <td><%= player.balls %></td>
                    <td><%= player.overs %></td>
                    <td><%= player.wickets %></td>
                    <td><%= player.economy %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div style="display: flex; justify-content: center; align-items: center;" class="o">
    <a  href="/match/<%= match._id %>/Innings2" class="back-button">Innings 2</a>
</div>
</body>
</html>
